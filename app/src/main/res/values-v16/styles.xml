<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_fondo</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_texto</item>
        <item name="android:textAppearanceLarge">@style/EstiloTitulo</item>
        <item name="buttonStyle">@style/EstiloBoton</item>
    </style>

    <style name="EstiloTitulo" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="EstiloBoton">
        <item name="android:background">@drawable/fondo_boton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>